<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.khoavin.karaokebooking.LoginActivity"
    android:background="#00ffaa">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Karaoke Booking"
        android:textSize="40dp"
        android:layout_marginTop="50dp"
        android:id="@+id/textView"
        style="@style/AppTheme"
        android:fontFamily="@string/abc_action_bar_home_subtitle_description_format"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="   Đăng nhập"
        android:id="@+id/btn_Login"
        android:background="#FFFFFF"
        android:layout_marginTop="59dp"
        android:layout_below="@+id/checkBox"
        android:layout_alignLeft="@+id/txt_pass"
        android:layout_alignStart="@+id/txt_pass"
        android:layout_toLeftOf="@+id/textView2"
        android:layout_toStartOf="@+id/textView2" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/txt_email"
        android:hint="Email"
        android:text="khoavin@gmail.com"
        android:layout_marginTop="49dp"
        android:layout_below="@+id/textView"
        android:layout_alignLeft="@+id/txt_pass"
        android:layout_alignStart="@+id/txt_pass"
        android:layout_alignRight="@+id/txt_pass"
        android:layout_alignEnd="@+id/txt_pass" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:hint="Mật Khẩu"
        android:text="123456"
        android:ems="10"
        android:id="@+id/txt_pass"
        android:layout_below="@+id/txt_email"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView"
        android:layout_marginTop="40dp"
        android:layout_alignRight="@+id/textView"
        android:layout_alignEnd="@+id/textView" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="Nhớ Mật Khẩu"
        android:id="@+id/checkBox"
        android:checked="false"
        android:textColor="#000000"
        android:layout_below="@+id/txt_pass"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Quên Mật Khẩu"
        android:id="@+id/textView2"
        android:layout_below="@+id/btn_Login"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="   Đăng Kí"
        android:id="@+id/btn_Register"
        android:background="#FFFFFF"
        android:layout_alignTop="@+id/btn_Login"
        android:layout_toRightOf="@+id/textView2"
        android:layout_alignRight="@+id/txt_pass"
        android:layout_alignEnd="@+id/txt_pass" />

</RelativeLayout>
