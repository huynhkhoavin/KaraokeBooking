<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="0dp"
    android:layout_marginRight="20dp"
    android:background="@drawable/my_custom_background"
    android:id="@+id/layout_item_chinhsuaphong"
    android:layout_height="wrap_content">
    <TextView
        android:layout_marginLeft="10dp"
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        android:text="Giá tiền: 3$/giờ"
        android:id="@+id/item_chinhsuaphong_giatien"
        android:textSize="15dp"
        android:textColor="#4a7cfa"
        android:gravity="center"
        android:layout_alignRight="@+id/item_chinhsuaphong_tenphong"
        android:layout_alignEnd="@+id/item_chinhsuaphong_tenphong"
        android:layout_below="@+id/item_chinhsuaphong_tenphong"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="10dp"/>


    <TextView
        android:layout_marginLeft="10dp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="PHÒNG 1"
        android:id="@+id/item_chinhsuaphong_tenphong"
        android:textSize="25dp"
        android:textColor="#fa564a"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:visibility="invisible"
        android:layout_width="1dp"
        android:layout_height="wrap_content"
        android:id="@+id/item_chinhsuaphong_id"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>

