<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="0dp"
    android:layout_marginRight="20dp"
    android:background="@drawable/my_custom_background"
    android:onClick="roomClick"
    android:id="@+id/layout_songs"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nắng Ấm Xa Dần"
        android:id="@+id/tv_ten_bai_hat"
        android:textSize="20dp"
        android:layout_marginTop="5dp"
        android:textColor="#4a7cfa"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/tv_maso"
        android:layout_toEndOf="@+id/tv_maso"
        android:layout_marginLeft="18dp"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="18dp" />




    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nắng ấm xa dần rồi, ..."
        android:id="@+id/tv_loi_bh"
        android:textSize="15dp"
        android:textColor="#fab917"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/tv_maso"
        android:layout_alignLeft="@+id/tv_ten_bai_hat"
        android:layout_alignStart="@+id/tv_ten_bai_hat" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="123456"
        android:id="@+id/tv_maso"
        android:textSize="30dp"
        android:textColor="#fa564a"
        android:layout_marginLeft="17dp"
        android:layout_marginStart="17dp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Karaoke 6 Số"
        android:id="@+id/tv_album"
        android:layout_alignBottom="@+id/tv_Gia_Tien"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:layout_alignTop="@+id/tv_Gia_Tien" />


</RelativeLayout>

